{
  "manifest_version": 3,
  "name": "Golden Access",
  "version": "1.0",
  "description": "CS4352 Project",
  
  "icons": {
    "48": "icons/icon.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "permissions": [
    "sidePanel",
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';" 
  },
  "host_permissions": [
    "<all_urls>"
  ]
}
